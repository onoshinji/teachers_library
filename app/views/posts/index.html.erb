<h2>投稿一覧</h2>
<table>
  <tr>
    <th id ="index_color">投稿者</th>
    <th id ="index_color">タイトル</th>
    <th id ="index_color">投稿内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td type="button" class="default"><%= " #{post.user.name}" %>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td type="button" class="btn btn-info"><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <% if current_user == post.user %>
    <td type="button" class="btn btn-default"><%= link_to "投稿を編集する", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td type="button" class="btn btn-danger"><%= link_to '投稿を削除する', post_path(post.id),data: { confirm: '本当に削除していいですか？' }, method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<%= link_to '新しく投稿する', new_post_path ,class: 'btn btn-primary' %>
