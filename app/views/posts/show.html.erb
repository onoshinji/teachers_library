  <p id="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p>タイトル: <%= @post.title %></p>
  <p>内容: <%= @post.content %></p>
  <span>閲覧数: <%= @post.views_count %></span>
  <span class= 'btn btn-primary'>
  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
  </span>
  <p><%= image_tag @post.image.url %></p>
  <p><%= "ファイルの種類:#{@post.kind}" %></p>
  <div id ="margin">
    <% unless @post.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
  <%= link_to '新しく投稿する', new_post_path %>
<div id ="margin">
  <%= link_to "投稿を編集する", edit_post_path(@post.id), data: { confirm: '本当に編集していいですか？' } %>
  <%= link_to '投稿を削除する', post_path(@post.id),data: { confirm: '本当に削除していいですか？' }, method: :delete %>
</div>
