<div class ="row">
  <div class = "col-4">
    <div class="row">
    <div class="col-10 offset-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
  <%= image_tag(current_user.image.url(:thumb)) if current_user.image && current_user.image.url %>
  <p><%= f.file_field :image %></p>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control form-control-sm"%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-sm" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>
  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-sm" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-sm"%>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control form-control-sm" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update'),class: 'btn btn-primary btn-sm' %>
  </div>

  <p><%= link_to t('.cancel_my_account'),registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete,class: 'btn btn-danger btn-sm' %></p>
  <%= link_to t('devise.shared.links.back'), :back %>
<% end %>
</div>
</div>
</div>
<%# ここからメインコンテンツ表示用。お気に入り一覧と自身の投稿内容をタブ切替で表示する %>
<div>
  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab" class="btn btn-sm btn-info">お気に入り</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab" class="btn btn-sm btn-primary">自分の投稿</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane" id="tab_a" role="tabpanel">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%# MVCに反しているが、コントローラーで@favoritesがうまく渡せていない %>
      <% sorted_favorites = current_user.favorites.order(id: :DESC) %>
      <% sorted_favorites.each do |favorite| %>
      <p><%= link_to image_tag(favorite.post.image.url(:thumb)), post_path(favorite.post.id) %></p>
      <%= "#{favorite.post.user.name}さんの投稿" %>
      <% end %>
    </div>
    <div class="tab-pane active" id="tab_b" role="tabpanel">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <!-- deviseで@postsを取得できていない -->
      <% sorted_posts = current_user.posts.order(created_at: :DESC) %>
      <% sorted_posts.each do |post| %>
        <object><%= link_to image_tag(post.image.url(:thumb)), post_path(post.id) %></object>
      <% end %>
  </div>
</div>
</div>
